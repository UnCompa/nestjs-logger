{
  "compilerOptions": {
    "target": "ES6", // Versión de JavaScript a la que quieres compilar
    "module": "CommonJS", // Tipo de módulo (NestJS usa CommonJS por defecto)
    "outDir": "./dist", // Directorio de salida para los archivos compilados
    "rootDir": "./src", // Directorio raíz de tus archivos TypeScript
    "strict": false, // Activa todas las comprobaciones estrictas de tipos
    "esModuleInterop": true, // Permite la interoperabilidad entre módulos ES6 y CommonJS
    "skipLibCheck": true, // Omite la verificación de tipos de las bibliotecas
    "forceConsistentCasingInFileNames": true, // Asegura la coherencia en los nombres de los archivos
    "resolveJsonModule": true, // Permite importar archivos .json
    "noImplicitAny": false, // No permite el tipo `any` implícito
    "noEmitOnError": false, // No emite archivos si hay errores de compilación
    "declaration": true, // Genera archivos .d.ts
    "declarationMap": true, // Opcional, para mapear los archivos .d.ts generados
    "experimentalDecorators": true,
  },
  "include": [
    "src/**/*.ts" // Incluye todos los archivos .ts dentro de src
  ],
  "exclude": [
    "node_modules" // Excluye los archivos de node_modules
  ]
}